ident = @{ "$" ~ (ASCII_ALPHANUMERIC | "_")+ }

negate =  { ("!" | "not") }
op     = _{ or | and }
and    =  { ("and" | "AND" | "&&") }
or     =  { ("or" | "OR" | "||") }

primary = _{ ident | "(" ~ expr ~ ")" }
atom    = _{ negate? ~ primary }

expr      =  { atom ~ (op ~ atom)* }
condition = _{ SOI ~ expr ~ EOI }

WHITESPACE = _{ " " }
